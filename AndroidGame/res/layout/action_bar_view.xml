<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
	<Button
        android:id="@+id/button_action_bar_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="performAbility"/>
	
	<Button
        android:id="@+id/button_action_bar_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_action_bar_0"
        android:onClick="performAbility"/>
	
	<Button
        android:id="@+id/button_action_bar_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_action_bar_1"
        android:onClick="performAbility"/>
	
	<Button
        android:id="@+id/button_action_bar_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_action_bar_2"
        android:onClick="performAbility"/>
	
	<Button
        android:id="@+id/button_action_bar_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_action_bar_0"
        android:onClick="performAbility"/>
	
	<Button
        android:id="@+id/button_action_bar_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_action_bar_4"
        android:layout_below="@id/button_action_bar_0"
        android:onClick="performAbility"/>
	
	<Button
        android:id="@+id/button_action_bar_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_action_bar_5"
        android:layout_below="@id/button_action_bar_0"
        android:onClick="performAbility"/>
	
	<Button
        android:id="@+id/button_action_bar_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_action_bar_6"
        android:layout_below="@id/button_action_bar_0"
        android:onClick="performAbility"/>
	
</RelativeLayout>
