<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/item_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/item_value_label"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_name_label"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/item_value"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_name_label"
        android:layout_toRightOf="@id/item_value_label"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/item_durability_label"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_name_label"
        android:layout_toRightOf="@id/item_value"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/item_durability_value"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_name_label"
        android:layout_toRightOf="@id/item_durability_label"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/item_property_1"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_value_label"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/item_property_2"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_property_1"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/item_requirements"
        android:layout_width="wrap_content"
        android:layout_below="@id/item_property_2"
        android:layout_height="wrap_content" />
    
</RelativeLayout>
